@model RoyalDrop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">


<style>



    .btn-danger {
        border-radius: 10px;
        border: 2px solid #f7d139;
        box-shadow: 3px 3px 3px gray;
        width: 120px;
        height: 40px;
        color: white;
        font-family: 'Oswald', sans-serif;
    }
</style>





<div>
    <h4>Perfume</h4>
    <hr />
    <br >
   
    <div class="row">
        <div class="col-md-6">
            <img src="@("~/images/" + Model.ImageUrl)" asp-append-version="true" style="width:400px;" />
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Productname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Productname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Purchase)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Purchase)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </dl>
            <div class="qty-container mb-3">

                <button class="qty-btn-minus btn-light" type="button" onclick="decreaseValue()"><i class="fa fa-minus"></i></button>
                <input type="text" name="qty" value="0"  class="input-qty" style="width:50px" id="qty-input" />
                <button class="qty-btn-plus btn-light" type="button" onclick="increaseValue()"><i class="fa fa-plus"></i></button>
            </div>

            <script>
                function increaseValue() {
                    var inputElement = document.getElementById("qty-input");
                    var currentValue = parseInt(inputElement.value, 10);
                    inputElement.value = currentValue + 1;
                }

                function decreaseValue() {
                    var inputElement = document.getElementById("qty-input");
                    var currentValue = parseInt(inputElement.value, 10);
                    if (currentValue > 0) {
                        inputElement.value = currentValue - 1;
                    }
                }
            </script>


            <div>
                <button type="button" class="btn btn- btn-danger btn-block">PURCHASE</button>
                <button type="button" class="btn btn- btn-danger btn-block">FAVOURITE</button>
            </div>

            <br />
        </div>
    </div>


    
</div>
