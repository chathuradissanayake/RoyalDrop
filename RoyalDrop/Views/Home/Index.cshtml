<style>


    .custom-button {
        text-align: center;
        width: 150px;
        height: 40px;
    }
    .button-row {
        margin-bottom:2px;
    }

    .namestyle {
        color: #262626;
        font-family: 'Exo 2', sans-serif;

    }

    .black-button {
        background-color: #454545;
        border-radius: 10px;
        border: 2px solid #f7d139;
        box-shadow: 5px 5px 10px gray;
        width: 80px;
        height: 40px;
        color: white;
    }

    .card-text {
        padding-bottom: 10px;
        font-family: 'Rajdhani', sans-serif;
        font-size: 120%;
    }

